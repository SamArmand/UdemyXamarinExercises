<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdemyXamarinExercises.SignUpPage"
	BackgroundColor="#127ac7"
	Padding="20">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="40"/>
			<RowDefinition Height="40"/>
		</Grid.RowDefinitions>
		<StackLayout VerticalOptions="Center" Grid.Row="0" Grid.Column="0">
			<Label Text="Welcome to Xamarin" FontSize="30" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
			<Label Text="Cross-platform apps made easy" FontSize="18" TextColor="White" HorizontalOptions="Center" />
		</StackLayout>
		<Button Grid.Row="1" Grid.Column="0" BackgroundColor="#1dabf0" TextColor="White" Text="Login"/>
		<Button HeightRequest="40" Grid.Row="2" Grid.Column="0" BackgroundColor="#1dabf0" TextColor="White" Text="Register"/>
	</Grid>
</ContentPage>